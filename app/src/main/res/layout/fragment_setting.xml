<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/set_img_profile_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:src="@drawable/profile_image"
                app:civ_border_width="5dp"
                app:civ_border_color="@color/colorBlack"/>

            <TextView
                android:id="@+id/set_textview_user_name"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="tên"
                android:textAlignment="center"
                android:textSize="28dp"
                android:layout_below="@+id/set_img_profile_image"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/set_textview_user_status"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="trạng thái"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_below="@+id/set_textview_user_name"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/set_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/set_textview_user_status"
                android:inputType="textMultiLine"
                android:text="Đăng Xuất"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:background="@android:color/holo_red_light"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                android:textAllCaps="false"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>